generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id        String @id @default(uuid())
  firstname String
  lastname  String
  username  String @unique
  password  String
  files     File[]
}

model File {
  id        String   @id @default(uuid())
  name      String   @unique
  dir_url   String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  sizeKB    Int
}
